{
  "name": "digital-squared",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "repository": "localhost",
  "author": "Justantvish",
  "license": "MIT",
  "scripts": {
    "server": "live-server --watch=dev/ --open=dev/index.html",
    "build-js": "babel src -d dev",
    "build-sass": "node-sass src/assets/styles/main.scss dev/assets/styles/main.css -w --output-style compact",
    "compress-images": "imagemin src/assets/images/* --plugin.jpegtran.progressive=true --out-dir=dev/assets/images",
    "copy-html": "copy-and-watch --watch src/**/*.html dev",
    "copy-fonts": "copyfiles -f -s src/assets/fonts/* dev/assets/fonts",
    "dev": "npm-run-all --parallel build-sass build-js compress-images copy-html copy-fonts server"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "copy-and-watch": "^0.1.6",
    "copyfiles": "^2.4.1",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "live-server": "^1.2.2",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
